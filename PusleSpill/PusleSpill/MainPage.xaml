<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="PusleSpill.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Puzzle Pieces">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,0">

            <!-- Welcome Title -->
            <Label x:Name="WelcomeLabel" 
                   Text="Puslespill!!" 
                   FontSize="32"
                   HorizontalOptions="Center" />

            <!-- Puzzle Selection Buttons -->
            <Button x:Name="Puzzle1Button"
                    Text="Mad Cow!"
                    Clicked="OnPuzzleSelected"
                    FontSize="24"
                    HeightRequest="80" />

            <Button x:Name="Puzzle2Button" 
                    Text="Holy Cow!"
                    Clicked="OnPuzzleSelected"
                    FontSize="24"
                    HeightRequest="80" />

            <Button x:Name="Puzzle3Button"
                    Text="Battle Cow!" 
                    Clicked="OnPuzzleSelected"
                    FontSize="24"
                    HeightRequest="80" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>